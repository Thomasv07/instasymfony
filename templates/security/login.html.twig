{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="principalelogin" method="post">
<div class="logologin"></div>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <input type="text" placeholder="Num. téléphone, nom d’utilisateur ou e-mail" value="{{ last_username }}" name="username" id="inputUsername" class="formlogin" autocomplete="username" required autofocus>
    <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="formlogin" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btnlogin" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
